{
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/*.spec.ts"]
}
